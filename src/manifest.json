{
  "manifest_version": 2,
  "name": "medium-bookmarklets",
  "version": "0.0.1",
  
  "permissions": [
    "activeTab",
    "storage"
  ],

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["bookmarklets.js"],
      "css": ["styles.css"]
    }
  ]
}